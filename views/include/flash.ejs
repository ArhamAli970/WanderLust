<% if (message && message.length!=0) {%>
<div class="alert alert-success  alert-dismissible fade show col-6 offset-3 cntr" role="alert">
    <%= message %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
<% } %>

<% if (err && err.length!=0) {%>
    <div class="alert alert-danger alert-dismissible fade show col-6 offset-3 cntr" role="alert">
        <%= err %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>